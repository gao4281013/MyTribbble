<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_height_small"
    android:paddingLeft="@dimen/margin_16dp"
    android:paddingRight="@dimen/margin_16dp"
    >

    <TextView
        android:id="@+id/mViewsCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="222"
        android:textColor="@color/icon"
        />

    <ImageView
        android:id="@+id/eyeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp8"
        android:layout_toLeftOf="@id/mViewsCountText"
        android:src="@drawable/ic_remove_red_eye_black_24dp"
        />

    <TextView
        android:id="@+id/mCommentCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/eyeImg"
        android:text="22"
        android:textColor="@color/icon"
        />

    <ImageView
        android:id="@+id/commentImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp8"
        android:layout_toLeftOf="@id/mCommentCountText"
        android:src="@drawable/ic_forum_black_24dp"
        />
    <TextView
        android:id="@+id/mLikeCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/commentImg"
        android:text="144"
        android:textColor="@color/icon"
        />

    <ImageView
        android:id="@+id/likeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp8"
        android:layout_toLeftOf="@id/mLikeCountText"
        android:src="@drawable/ic_favorite_black_24dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:id="@+id/mAttachmentLayout"
        >

        <ImageView
            android:src="@drawable/ic_attachment_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mAttachmentCountText"
            android:textColor="@color/icon"
            android:text="1"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/mAttachmentLayout"
        android:orientation="horizontal"
        android:id="@+id/mRoundLayout"
        >

        <ImageView
            android:src="@drawable/ic_attachment_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mReboundCountText"
            android:textColor="@color/icon"
            android:text="2"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>